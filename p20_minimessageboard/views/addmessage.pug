extends layout

block content
    div(class="formdiv") 
        form(method="POST" action="/addmessage")
            div 
                label(for="title") Title 
                input(placeholder="Enter title", name="title", id="title", required)
            br
            div 
                label(for="text") Text 
                input(placeholder="Enter text", name="text", id="text", required)
            br
            button(type="submit") Add Message